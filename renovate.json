{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["deps"],
  "automerge": true,
  "automergeType": "branch",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "groupName": "orpc dependencies",
      "groupSlug": "orpc",
      "matchPackageNames": ["@orpc/*"]
    }
  ],
  "fetchChangeLogs": "branch"
}
